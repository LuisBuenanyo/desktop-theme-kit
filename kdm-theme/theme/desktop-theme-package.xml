            <item type="label" id="messsage">
	      <pos anchor="nw" x="90" y="36"/>
	      <normal font="Cantarell 10" color="#f29d9a"/>
	      <stock type="caps-lock-warning"/>
      <text>%h</text> 
            </item>
	  </fixed>
	</item>
